<!-- Responsive panel example-->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Theme #<%= @theme.id %></h3>
      </div>
      <div class="panel-body">
        <div class="row">
          <div class="col-md-12">
            <dl class="dl-horizontal">
              <dt>Name</dt>
              <dd><%= @theme.name %></dd>

              <dt></dt>
              <dd><img src="<%= @theme.avatar %>" height="100"></dd>

            </dl>

            <table>
            <caption>Which teachers are currently renting Theme #<%= @theme.id %></caption>
            <tr>
            <th width="80%">Teacher</th>
            <th width="20%">Network</th>
            </tr>
            <% @teachers.each do |teacher| %>
              <tr>
              <td><%= teacher.name if teacher.attendances.last.theme_id == @theme.id %></td>
              <td><%= teacher.network.name if teacher.attendances.last.theme_id == @theme.id %></td>
              </tr>

            <% end %>
             </table>

            <div class="btn-group btn-group-justified">
              <a href="/themes" class="btn btn-primary">
                <i class="fa fa-chevron-left"></i>
              </a>

              <a href="/themes/<%= @theme.id %>/edit" class="btn btn-warning">
                <i class="fa fa-edit"></i>
              </a>

              <a href="/delete_theme/<%= @theme.id %>" class="btn btn-danger" rel="nofollow">
                <i class="fa fa-trash-o"></i>
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- End responsive panel example -->
