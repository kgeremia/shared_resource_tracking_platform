<!-- Responsive panel example-->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Teacher #<%= @teacher.id %></h3>
      </div>
      <div class="panel-body">
        <div class="row">
          <div class="col-md-12">
            <dl class="dl-horizontal">
              <dt></dt>
              <dd><img src="<%= @teacher.avatar %>"></dd>

              <dt>Network</dt>
              <dd><%= @teacher.network.name %></dd>

              <dt>Name</dt>
              <dd><%= @teacher.name %></dd>

              <dt>School</dt>
              <dd><%= @teacher.school.name %></dd>

              <dt>Address</dt>
              <dd><%= @teacher.address %></dd>

              <dt>Phone number</dt>
              <dd><%= @teacher.phone_number %></dd>

              <dt>Attendance History</dt>
              <dd><%= @attendance %>%</dd>

              <dt>Current Theme</dt>
              <dd><%= Theme.find_by({ :id => @teacher.attendances.last.theme_id}).name if @teacher.attendances.count>0 %></dd>
              <dd><img src="<%= Theme.find_by({ :id => @teacher.attendances.last.theme_id}).avatar if @teacher.attendances.count>0 %>"></dd>

            </dl>
            <div class="btn-group btn-group-justified">
              <a href="/teachers" class="btn btn-primary">
                <i class="fa fa-chevron-left"></i>
              </a>

              <a href="/teachers/<%= @teacher.id %>/edit" class="btn btn-warning">
                <i class="fa fa-edit"></i>
              </a>

              <a href="/delete_teacher/<%= @teacher.id %>" class="btn btn-danger" rel="nofollow">
                <i class="fa fa-trash-o"></i>
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- End responsive panel example -->
