<!-- Validation failure messages -->

<% if @teacher.errors.any? %>
  <% @teacher.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<!-- Responsive panel example -->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Edit Teacher #<%= @teacher.id %></h3>
      </div>
      <div class="panel-body">
        <form action="/update_teacher/<%= @teacher.id %>" method="post" class="form-horizontal">
          <!-- Hidden input for authenticity token to protect from forgery -->
          <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

          <!-- Label and input for network_id -->
          <div class="form-group">
            <label for="network_id" class="col-sm-2 control-label">
              Network
            </label>
            <div class="col-sm-10">
              <input type="text" id="network_id" name="network_id" placeholder="Network" class="form-control" value="<%= @teacher.network_id %>">
            </div>
          </div>

          <!-- Label and input for name -->
          <div class="form-group">
            <label for="name" class="col-sm-2 control-label">
              Name
            </label>
            <div class="col-sm-10">
              <input type="text" id="name" name="name" placeholder="Name" class="form-control" value="<%= @teacher.name %>">
            </div>
          </div>

          <!-- Label and input for school_id -->
          <div class="form-group">
            <label for="school_id" class="col-sm-2 control-label">
              School
            </label>
            <div class="col-sm-10">
              <input type="text" id="school_id" name="school_id" placeholder="School" class="form-control" value="<%= @teacher.school_id %>">
            </div>
          </div>

          <!-- Label and input for address -->
          <div class="form-group">
            <label for="address" class="col-sm-2 control-label">
              Address
            </label>
            <div class="col-sm-10">
              <input type="text" id="address" name="address" placeholder="Address" class="form-control" value="<%= @teacher.address %>">
            </div>
          </div>

          <!-- Label and input for phone_number -->
          <div class="form-group">
            <label for="phone_number" class="col-sm-2 control-label">
              Phone number
            </label>
            <div class="col-sm-10">
              <input type="text" id="phone_number" name="phone_number" placeholder="Phone number" class="form-control" value="<%= @teacher.phone_number %>">
            </div>
          </div>

          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <button class="btn btn-warning">
                Update Teacher
              </button>
              or
              <a href="/teachers/<%= @teacher.id %>">Cancel</a>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>


<!-- End responsive panel example -->
