<!-- Responsive panel example-->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Attendance #<%= @attendance.id %></h3>
      </div>
      <div class="panel-body">
        <div class="row">
          <div class="col-md-12">
            <dl class="dl-horizontal">
              <dt>Meeting</dt>
              <dd><%= @attendance.meeting_id %></dd>

              <dt>Teacher</dt>
              <dd><%= @attendance.teacher_id %></dd>

              <dt>Attendance</dt>
              <dd><%= @attendance.attendance %></dd>

              <dt>Note</dt>
              <dd><%= @attendance.note %></dd>

              <dt>Theme</dt>
              <dd><%= @attendance.theme_id %></dd>

            </dl>
            <div class="btn-group btn-group-justified">
              <a href="/attendances" class="btn btn-primary">
                <i class="fa fa-chevron-left"></i>
              </a>

              <a href="/attendances/<%= @attendance.id %>/edit" class="btn btn-warning">
                <i class="fa fa-edit"></i>
              </a>

              <a href="/delete_attendance/<%= @attendance.id %>" class="btn btn-danger" rel="nofollow">
                <i class="fa fa-trash-o"></i>
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- End responsive panel example -->
